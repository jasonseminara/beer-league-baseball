
<%- include('./partials/header') %>
    <table class="table">
        <thead>
            <tr>
                    <th>Team</th> 
                    <th><abbr title="Won">W</abbr></th>
                    <th><abbr title="Lost">L</abbr></th>
                    <th><abbr title="PCT">PCT</abbr></th>  
            </tr>
        </thead>
        <tbody>
        <a class="button" href="/teams/create">Create Team</a>
    <% teams.forEach(team => { %>
        <p>
            <tr>
            <td><a class="thead"href="/<%=team.id%>/<%=team.tname%>/players" ><%=team.tname%></a></td>
            <td><%=team.wins%></td>
            <td><%=team.losses%></td>
            <td><%=team.pct.replace(/^[0]+/g,"")%></td>
          <td><a href="<%=team.tname%>/update" >Edit Team</a></td>
    </p> 
</tr>
    <%}) %>
</tbody>
</table>
</div>
</section>
</body>
</html>